    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Torchrun",
            "type": "debugpy",
            "module": "torch.distributed.run",
            "request": "launch",
            "console": "integratedTerminal",
            "args": [
                "--nproc_per_node=4",
                "main.py",
            ],
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            }
        }
    ]
}